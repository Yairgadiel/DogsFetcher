<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/dog_height"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3:2"
        android:id="@+id/dog_img"
        android:src="@android:drawable/ic_menu_view"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/dog_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dog_name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_margin="4dp"
        app:layout_constraintStart_toEndOf="@id/dog_img"
        app:layout_constraintTop_toTopOf="@id/dog_img"
        android:text="dog name"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dog_day"
        android:textSize="16sp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="@id/dog_name"
        app:layout_constraintTop_toBottomOf="@id/dog_name"
        app:layout_constraintBottom_toBottomOf="@id/dog_img"
        app:layout_constraintVertical_bias="1.0"
        android:text="fetch date"/>


</androidx.constraintlayout.widget.ConstraintLayout>