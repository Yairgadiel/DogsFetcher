<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4:3"
        android:id="@+id/dog_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dog_profile_name"
        app:layout_constraintTop_toBottomOf="@id/dog_profile_image"
        app:layout_constraintStart_toStartOf="@id/dog_profile_image"
        app:layout_constraintEnd_toEndOf="@id/dog_profile_image"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"/>

</androidx.constraintlayout.widget.ConstraintLayout>